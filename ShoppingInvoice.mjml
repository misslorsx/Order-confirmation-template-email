<mjml>
  <mj-head>
    <mj-font name="Great Vibes" href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap"></mj-font>
    <mj-font name="Inconsolata" href="https://fonts.googleapis.com/css2?family=family=Inconsolata:wght@300&display=swap"></mj-font>
    <mj-style>
      .product-img {
          max-width: 40px;
      }
      .order-summary td, .order-summary th {
          height: 40px;
          vertical-align: middle;
      		text-align: center;
  				border-bottom: 1px solid #ddd;
      }
      .order-summary td.item-image,
      .order-summary th.item-image {
      		width: 40px;
      }
      .order-summary th {
          background-color: #E3B1A0;
      }
      @media only screen and (max-width: 600px) {
        .order-summary td.item-image,
      	.order-summary th.item-image {
            display: none;
      			width: 0;
        }
        .order-summary td.item-name {
            text-align: center;
        }
      }
    </mj-style>
  </mj-head>
  <mj-body>
    <!-- top section -->
    <mj-section background-color="#E3B1A0" full-width="full-width">
