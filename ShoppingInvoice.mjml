      </mj-column>
      <mj-column width="66.66666666666666%" vertical-align="middle">
        <!--Text-->
        <mj-text align="center" padding-bottom="0px" padding-top="40px" color="#444" font-weight="bold" font-size="40px" font-family="Great Vibes">
